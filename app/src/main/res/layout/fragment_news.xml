<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="kimxu.newsandfm.frag.NewsFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="40dp">
    <TextView
        android:id="@+id/tView_fragNews_kj"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="科技"
        style="@style/TextViewNFNews"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tView_fragNews_sh"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="社会"
        style="@style/TextViewNFNews"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tView_fragNews_dz"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="段子"
        style="@style/TextViewNFNews"
        android:layout_height="match_parent" />
</LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager_fragNews_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
